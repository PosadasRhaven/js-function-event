<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>JS-Functions and Events</title>
</head>
<body>
	<div class="container">
		Enter 1st Number: <input type="number" id="box1"> <br></br>
		Enter 2nd Number: <input type="number" id="box2"> <br></br>
		<h3 id="sum"></h3>
		<h3 id="difference"></h3>
		<h3 id="product"></h3>
		<h3 id="quotient"></h3>
		<button type="Submit" onclick="addition()">ADD</button>
		<button type="Submit" onclick="subtraction()">SUBTRACT</button>		
		<button type="Submit" onclick="multiplication()">MULTIPLY</button>
		<button type="Submit" onclick="division()">DIVIDE</button>
	</div>
    <script type="text/javascript">
	    function addition() {
		 var num1 = document.getElementById("box1").value;
		 var num2 = document.getElementById("box2").value;
		 var sum = Number(num1) + Number(num2);
		document.getElementById("sum").innerHTML = "The sum of two integers is: " + sum;
	   }

	   function subtraction() {
		 var num1 = document.getElementById("box1").value;
		 var num2 = document.getElementById("box2").value;
		 var difference = Number(num1) - Number(num2);
		document.getElementById("difference").innerHTML = "The difference of two integers is: " + difference;
	   }

	   function multiplication() {
		 var num1 = document.getElementById("box1").value;
		 var num2 = document.getElementById("box2").value;
		 var product = Number(num1) * Number(num2);
		document.getElementById("product").innerHTML = "The product of two integers is: " + product;
	   }

	   function division() {
		 var num1 = document.getElementById("box1").value;
		 var num2 = document.getElementById("box2").value;
		 var quotient = Number(num1) / Number(num2);
		document.getElementById("quotient").innerHTML = "The quotient of two integers is: " + quotient;
	   }
    </script>
</body>
</html>
